@model SignUpViewModel
@{
    ViewData["Title"] = "Sign-up Political Party";
}

<div class="containerSignup">
    <div class="card">
        <div class="form">
            <div class="left-side">
                <div class="left-heading">
                    <img width="150" src="/assets/logo/logo_white3.png" alt="Logo" />
                    <h5>Political Parties</h5>
                </div>
                <div class="steps-content">
                    <h5>Step <span class="step-number">1</span></h5>
                    <p>Already have an account? </p><a asp-controller="Login" asp-action="login">Login</a>
                </div>
                <ul class="progress-bar">
                    <li class="active">Personal Information</li>
                    <li>Address</li>
                    <li>User Information</li>
                </ul>
            </div>
            <form asp-action="SignupForm">
                <input asp-for="role" value="aad7e709-77a3-489a-98e1-a4e768a8d5a7" hidden />
                <div class="right-side">
                    <div class="main active">
                        <div class="text">
                            <h2>Your Personal Information</h2>
                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <input asp-for="Name" type="text" required id="user_name">
                                <span>Name</span>
                            </div>
                            <div class="input-div">
                                <input asp-for="LastName" type="text" required>
                                <span>Last Name</span>
                            </div>
                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <input asp-for="Phone" type="text" required>
                                <span>Phone number</span>
                            </div>

                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <select asp-for="Gender">
                                    <option>Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                            <div class="input-div">
                                <select asp-for="MarriedName">
                                    <option>Civil Status</option>
                                    <option value="Single">Single</option>
                                    <option value="Maried">Maried</option>
                                </select>
                            </div>
                        </div>
                        <div class="input-div">
                            <input asp-for="bornDate" type="date" required>
                            <span>Birth Day</span>
                        </div>
                        <div class="buttons">
                            <button class="next_button">Next</button>
                        </div>
                    </div>
                    <div class="main">
                        <div class="text">
                            <h2>Address</h2>
                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <input asp-for="Thoroughfare" type="text" required>
                                <span>Address</span>
                            </div>
                            <div class="input-div">
                                <input asp-for="ApartmentNumber" type="text" required>
                                <span>Number</span>
                            </div>
                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <input asp-for="City" type="text" required>
                                <span>City</span>
                            </div>
                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <input asp-for="PostalCode" type="text" required>
                                <span>Postal Code</span>
                            </div>
                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <input type="text" required>
                                <span>Province</span>
                            </div>
                        </div>
                        <div class="buttons button_space">
                            <button class="back_button">Back</button>
                            <button class="next_button">Next Step</button>
                        </div>
                    </div>
                    <div class="main">
                        <div class="text">
                            <h2>User Information</h2>
                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <input asp-for="Email" type="text" required require>
                                <span>Email</span>
                            </div>
                        </div>
                        <div class="input-text">
                            <div class="input-div">
                                <input asp-for="Password" type="password" required>
                                <span>Password</span>
                            </div>
                        </div>
                        <div class="buttons button_space">
                            <button class="back_button">Back</button>
                            <button>Sign Up</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

