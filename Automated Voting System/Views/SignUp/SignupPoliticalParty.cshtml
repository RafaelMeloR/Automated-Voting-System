@model SignUpViewModel
@{
    ViewData["Title"] = "Sign-up Political Party";
}

<!--====== SIGNIN ONE PART START ======-->
<section class="signin-area signin-one">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <form asp-action="SignupPoliticalParty">
                    <div class="signin-form form-style-two rounded-buttons">
                        <h1>Sign Up for Political Party</h1>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-input">
                                    <label>Your account will be under this email</label>
                                    <div class="input-items default">
                                        <input asp-for="Email" class="form-control" placeholder="Email" />
                                        <i class="lni lni-envelope"></i>
                                    </div>
                                </div>

                                <!-- form input -->
                            </div>
                            <div class="col-md-12">
                                <div class="form-input">
                                    <label>Password for your account</label>
                                    <div class="input-items default">
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <i class="lni lni-key"></i>
                                    </div>
                                </div>
                                <!-- form input -->
                            </div>
                            <div class="col-md-6">
                                <div class="form-input rounded-buttons">
                                    <button class="btn primary-btn rounded-full"
                                            asp-controller="Login" asp-action="login">
                                        Sign In!
                                    </button>
                                </div>
                                <!-- form input -->
                            </div>

                            <div class="col-md-6">
                                <div class="form-input rounded-buttons">
                                    <button class="btn primary-btn-outline rounded-full">
                                        Sign Up
                                    </button>
                                </div>
                                <!-- form input -->

                            </div>
                        </div>
                    </div>
                    <!-- signin form -->
                </form>
            </div>
        </div>
        <!-- row -->
    </div>
    <!-- container -->
</section>
<!--====== SIGNIN ONE PART ENDS ======-->
@section Scripts
    {
    <link href="~/css/signupform.css" rel="stylesheet" />
}

