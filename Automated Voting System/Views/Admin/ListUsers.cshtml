@model ListUsersViewModel
 
@{
    ViewData["Title"] = "Users List";
}


@if (Model.Message is not null)
{
    <div class="alert alert-success" role="alert">
        @Model.Message
    </div>
}

<h1>Users List</h1>
@if (Model.Users is not null)
{
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Admin</td>
                    <td></td>
                    <td>Electors</td>
                    <td></td>
                    <td>Candidate</td>
                    <td></td>
                    <td>Political Party</td>
                    <td></td>
                    <td>User</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model.Users)
                {
                    <tr>
                        <td>
                            <button class="btn btn-primary btn-success btn-sm" asp-action="makeAdmin" asp-route-email="@user.Email">
                                Make
                            </button>
                         </td>
                         <td>
                            <button class="btn btn-secondary btn-danger btn-sm" asp-action="removeAdmin" asp-route-email="@user.Email">
                                Remove
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-primary  btn-success btn-sm" asp-action="makeElector" asp-route-email="@user.Email">
                                Make
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-secondary   btn-danger btn-sm" asp-action="removeElectors" asp-route-email="@user.Email">
                                Remove
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-primary  btn-success btn-sm" asp-action="makeCandidate" asp-route-email="@user.Email">
                                Make
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-secondary  btn-danger btn-sm" asp-action="removeCandidate" asp-route-email="@user.Email">
                                Remove
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-primary  btn-success btn-sm" asp-action="makePoliticalParty" asp-route-email="@user.Email">
                                Make
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-secondary btn-danger btn-sm" asp-action="removePoliticalParty" asp-route-email="@user.Email">
                                Remove
                            </button>
                        </td>
                        <td>
                            @user.Email
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
}
else{
}